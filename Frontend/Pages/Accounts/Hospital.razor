@page "/Hospital/{email}"

@using Common.ApiResponseModels.HospitalResponseModels;

@inject HttpClient http;
@inject IConfiguration Configuration;
@inject NavigationManager NavigationManager;

<PageTitle>Swasthya - Healthcare Centre</PageTitle>

<div class="wrapper-div">
    <div class="wrapper-div-upper">
        <h1 class="app-name">
            swasthya
        </h1>
    </div>
    <span class="instruction-text">
        Select one.
    </span>
    <div class="wrapper-div-middle">
        <button class="button-image" @onclick="() => NavigateToProfile()">
            <img class="images" src="./images/Hospital Profile.svg" />
        </button>
        <button class="button-image" @onclick="() => NavigateToDoctors()">
            <img class="images" src="./images/Patients.svg" />
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string email { get; set; }

    private void NavigateToProfile()
    {
        var pageUrl = "/Hospital/Profile/" + email;
        NavigationManager.NavigateTo(pageUrl);
    }

    private void NavigateToDoctors()
    {
        var pageUrl = "/Hospital/Patients/" + email;
        NavigationManager.NavigateTo(pageUrl);
    }
}
